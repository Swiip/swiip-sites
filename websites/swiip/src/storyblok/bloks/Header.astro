---
import { AppBar } from "@skeletonlabs/skeleton"
import Bloks from "../../components/Bloks.astro"
import type { HeaderStoryblok } from "../types"

export type Props = { blok: HeaderStoryblok }

const { blok } = Astro.props
---

<header>
	<AppBar>
		{!!blok.lead && <Bloks slot="lead" bloks={blok.lead} />}
		{!!blok.title && <Bloks bloks={blok.title} />}
		{!!blok.trail && <Bloks slot="trail" bloks={blok.trail} />}
		{!!blok.headline && <Bloks slot="headline" bloks={blok.headline} />}
	</AppBar>
</header>
